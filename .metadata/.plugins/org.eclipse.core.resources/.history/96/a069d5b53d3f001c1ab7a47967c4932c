/* Includes ------------------------------------------------------------------*/
#include "API_delay.h"

/* Private typedef -----------------------------------------------------------*/
/* Private define ------------------------------------------------------------*/
/* Private macro -------------------------------------------------------------*/
/* Private variables ---------------------------------------------------------*/

/* Private function prototypes -----------------------------------------------*/
void delayInit( delay_t * delay, tick_t duration ){
	if(delay == 0)
		return;
	delay->duration = duration;
	delay->running = false;
	delay->startTime = 0;
}

bool_t delayRead( delay_t * delay ){
	if(delay->running){
		delay.running = true;
		delay->startTime = HAL_GetTick();
	}
	else
		//QUEDA AGREGAR QUE EL RUNNING SE VUELVA FALSE CUANDO SE CUMPLA EL TIEMPO
	return ((HAL_GetTick() - delay->startTime) >= delay->duration) ? true : false;
}

void delayWrite( delay_t * delay, tick_t duration ){
	delay->duration = duration;
}

/* Private functions ---------------------------------------------------------*/





