/**
  ******************************************************************************
  * @file    API_delay.h
  * @author  AV
  * @brief   API for non blocking delays
  ******************************************************************************/

/* Define to prevent recursive inclusion -------------------------------------*/
#ifndef _API_DELAY_H
#define _API_DELAY_H

/* Includes ------------------------------------------------------------------*/
#include <stdio.h>
#include <stdbool.h>
#include "stm32f4xx_hal.h"  		/* <- HAL include */
#include "stm32f4xx_nucleo_144.h" 	/* <- BSP include */



/* Exported types ------------------------------------------------------------*/

typedef uint32_t tick_t;

typedef bool bool_t;

typedef struct{
   tick_t startTime;
   tick_t duration;
   bool_t running;
} delay_t;


/* Exported constants --------------------------------------------------------*/
/* Exported macro ------------------------------------------------------------*/
/* Exported functions ------------------------------------------------------- */
void delayInit( delay_t * delay, tick_t duration );

bool_t delayRead( delay_t * delay );

void delayWrite( delay_t * delay, tick_t duration );


#endif /* _API_DELAY_H */
